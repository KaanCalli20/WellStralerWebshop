@model WellStralerWebshop.Models.ViewModels.FactuurDetailViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details factuur</h1>
<a class="btn btn-secondary" asp-area="" asp-controller="Invoice" asp-action="Index">Terug</a>
<a class="btn btn-secondary" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
<p>Factuurnr @Model.Factuur.FactuurNummer</p> <p>Totaalbedrag € @Model.Totaalbedrag</p>
<br />
<p>Datum @Model.Factuur.Datum.ToShortDateString()</p>

<table>
    <thead>
    <th>
        Zendnota
    </th>
    <th>
        Aantal
    </th>
    <th>
        Omschrijving
    </th>
    <th>
        Serienummer
    </th>
    <th>
        Eenh Prijs
    </th>
    <th>
        Bedrag
    </th>
    </thead>
    <tbody>
        @foreach (var item in Model.Factuur.FactuurLijnen)
        {
            <tr>
                <td>@item.ZendNummer</td>
                <td>@item.Aantal</td>
                <td>@item.ProductOmschrijving</td>
                <td>@item.SerieNummer</td>
                <td>@item.Prijs</td>
                <td>
                    @{
                        var prijs = @item.Prijs * @item.Aantal;
                }
                @prijs
            </td>
        </tr>
    }

    </tbody>
</table>