@model IEnumerable<WellStralerWebshop.Models.Domain.Product>

@{ 
    ViewData["Title"] = "Home Page";
}

<div >

    <form asp-controller="Product" asp-action="Index">
        Filter: 
        <input type="text" name="SearchString"/>
        <input type="submit" value="Search"/>
    </form>

    <table>
        <tr>
            <th>Prod</th>
            <th>Beschrijving</th>
            <th>Prijs</th>
        </tr>

        @foreach(var product in Model){
            <tr>
                <a>
                    <td> @product.Afk</td>
                    <td> @product.OmschrijvingNL</td>
                    <td> @product.Prijs</td>
                    <td> 
                        <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id">Bestellen</a>  
                    </td>
                </a>
                
            </tr>
        }

    </table>
         
</div>
